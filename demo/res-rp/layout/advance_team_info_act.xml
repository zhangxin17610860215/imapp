<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

   <include layout="@layout/v_toolbar"/>

    <com.wulewan.ghxm.UIEx.BounceScrollView
        style="@style/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_background"
        android:fillViewport="true"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <com.netease.wulewan.uikit.business.team.ui.TeamInfoGridView
                android:id="@+id/team_gird_view"
                style="@style/grid_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:numColumns="5"
                android:paddingBottom="25dip"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:paddingTop="16dip"
                android:verticalSpacing="16dip"></com.netease.wulewan.uikit.business.team.ui.TeamInfoGridView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="查看全部群成员"
                android:textSize="18sp"
                android:background="@color/white"
                android:id="@+id/tv_show_all"
                android:padding="15dp"
                />

            <View

                android:layout_width="match_parent"
                android:layout_height="10dp"

                />


            <include
                android:id="@+id/team_name_layout"
                layout="@layout/nim_advanced_team_info_divider_item" />

            <include
                android:id="@+id/team_myInfo_layout"
                layout="@layout/nim_advanced_team_info_divider_item" />

            <include
                android:id="@+id/team_qrcode_layout"
                layout="@layout/nim_advanced_team_info_divider_item" />

            <include
                android:id="@+id/team_banner_layout"
                layout="@layout/nim_advanced_team_info_divider_item" />

            <include
                android:id="@+id/team_manager_layout"
                layout="@layout/nim_advanced_team_info_divider_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

            <include
                android:id="@+id/team_chatHistory_layout"
                layout="@layout/nim_advanced_team_info_divider_item" />

            <include
                android:id="@+id/team_cleanHistory_layout"
                layout="@layout/nim_advanced_team_info_divider_item" />

            <include
                android:id="@+id/team_NoReceivedRPRecord_layout"
                layout="@layout/nim_advanced_team_info_divider_item"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

            <include
                android:id="@+id/team_lead_top_layout"
                layout="@layout/advanced_team_switch_diver_item" />

            <include
                android:id="@+id/team_needDisturb_layout"
                layout="@layout/advanced_team_switch_diver_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

            <include
                android:id="@+id/team_screenShot_layout"
                layout="@layout/advanced_content_team_switch_diver_item" />

            <include
                android:id="@+id/team_msg_clear"
                layout="@layout/advanced_content_team_switch_diver_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="解散群聊"
                android:background="@color/white"
                android:id="@+id/btn_exit"
                android:textColor="@color/color_red_ccfa3c55"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />





        </LinearLayout>





    </com.wulewan.ghxm.UIEx.BounceScrollView>
</LinearLayout>