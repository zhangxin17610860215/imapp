<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_bg"
    android:orientation="vertical">

    <include layout="@layout/v_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/edit_bg"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_20"
                android:paddingRight="@dimen/dimen_20"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="账户余额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="元"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/tv_recharge_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_1"
                    android:layout_toLeftOf="@+id/tv_2"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:gravity="right"
                    android:textColor="#FF9D03"
                    android:textSize="@dimen/text_size_18"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_amount_50"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:text="50元"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/theme_color"
                        android:background="@mipmap/amount_text_bg"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/jrmf_dimen_5"/>
                    <TextView
                        android:id="@+id/tv_amount_100"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:text="100元"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/theme_color"
                        android:background="@mipmap/amount_text_bg"
                        android:layout_marginLeft="@dimen/jrmf_dimen_5"
                        android:layout_marginRight="@dimen/jrmf_dimen_5"/>
                    <TextView
                        android:id="@+id/tv_amount_300"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:text="300元"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/theme_color"
                        android:background="@mipmap/amount_text_bg"
                        android:layout_marginLeft="@dimen/jrmf_dimen_5"
                        android:layout_marginRight="@dimen/dp_10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_20">
                    <TextView
                        android:id="@+id/tv_amount_500"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:text="500元"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/theme_color"
                        android:background="@mipmap/amount_text_selected_bg"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/jrmf_dimen_5"/>
                    <TextView
                        android:id="@+id/tv_amount_1000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:text="1000元"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/theme_color"
                        android:background="@mipmap/amount_text_bg"
                        android:layout_marginLeft="@dimen/jrmf_dimen_5"
                        android:layout_marginRight="@dimen/jrmf_dimen_5"/>
                    <TextView
                        android:id="@+id/tv_amount_2000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:gravity="center_horizontal"
                        android:text="2000元"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/theme_color"
                        android:background="@mipmap/amount_text_bg"
                        android:layout_marginLeft="@dimen/jrmf_dimen_5"
                        android:layout_marginRight="@dimen/dp_10"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_20"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/dimen_20"
                android:paddingRight="@dimen/dimen_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen_20">
                    <RelativeLayout
                        android:id="@+id/rl_aLi_Pay"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:background="@mipmap/pay_mode_selected"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dimen_20">
                        <ImageView
                            android:id="@+id/img_ali_bg"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:src="@drawable/myx_alipay"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付宝"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img_ali_bg"
                            android:layout_marginTop="@dimen/dp_10"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_wChat_Pay"
                        android:layout_width="100dp"
                        android:layout_height="75dp"
                        android:background="@mipmap/pay_mode_unselected"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dimen_20">
                        <ImageView
                            android:id="@+id/img_wchat_bg"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:src="@drawable/myx_wchat"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="微信"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img_wchat_bg"
                            android:layout_marginTop="@dimen/dp_10"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_recharge_Determine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/dp_10"
                    android:text="立即支付"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/white"
                    android:background="@mipmap/green_bt_bg"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>