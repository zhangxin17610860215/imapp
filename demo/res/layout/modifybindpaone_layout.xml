<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/edit_bg">

    <include layout="@layout/v_toolbar"/>

    <EditText
        android:id="@+id/et_oldModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:hint="请输入原手机号"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="15dp"
        android:background="@color/color_c9c9c9" />

    <EditText
        android:id="@+id/et_newModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:hint="请输入新手机号"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="15dp"
        android:background="@color/color_c9c9c9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_bind_verCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/nim_team_create_btn_selector"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:padding="3dp"/>

        <EditText
            android:id="@+id/et_bind_verCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/tv_bind_verCode"
            android:background="@null"
            android:hint="短信验证码"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@color/color_c9c9c9" />

    <TextView
        android:id="@+id/tvModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/nim_team_create_btn_selector"
        android:text="确定更改"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/jrmf_dimen_5"
        android:paddingBottom="@dimen/jrmf_dimen_5"
        android:layout_marginTop="@dimen/jrmf_dimen_30"/>
</LinearLayout>
