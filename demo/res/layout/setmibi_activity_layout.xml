<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/v_toolbar"/>

    <com.netease.yqbj.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20"
        android:src="@mipmap/user_head_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加币"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/theme_color"
                android:gravity="center"
                android:padding="@dimen/dimen_10"/>
            <ImageView
                android:id="@+id/img_add"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:background="@color/theme_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_subtraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="减币"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_black_333333"
                android:gravity="center"
                android:padding="@dimen/dimen_10"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_subtraction"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:background="@color/theme_color"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调整额度"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color_black_333333"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_mibiNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gray_bg"
            android:layout_marginLeft="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"
            android:paddingLeft="17dp"
            android:inputType="number"
            android:hint="输入调整蜜币个数"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"
            android:textColorHint="@color/color_999"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_Determine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_upress"
        android:text="确定修改"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>
</LinearLayout>
