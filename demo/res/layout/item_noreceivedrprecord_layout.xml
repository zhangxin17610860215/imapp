<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <com.netease.wulewan.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/img_Head"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_Head"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        android:singleLine="true"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/tv_name"/>

    <RelativeLayout
        android:id="@+id/bri_rev"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:layout_toRightOf="@+id/img_Head"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:background="@drawable/red_packet_rev_bg">

        <TextView
            android:id="@+id/tv_bri_mess_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/tv_bri_target_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="34dp"
            android:gravity="center|left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11"/>
        <TextView
            android:id="@+id/tv_bri_name_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:gravity="center|left"
            android:paddingLeft="14dp"
            android:textColor="@color/color_999"
            android:textSize="@dimen/text_size_10"/>
    </RelativeLayout>

</RelativeLayout>
