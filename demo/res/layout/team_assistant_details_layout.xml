<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/edit_bg">

    <include layout="@layout/v_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp">
        <com.netease.wulewan.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/img_assistantHead"
            android:layout_width="@dimen/jrmf_dimen_50"
            android:layout_height="@dimen/jrmf_dimen_50"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_assistantHead"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_assistantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_assistantReplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="更换"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:padding="@dimen/jrmf_dimen_5"
                android:background="@drawable/round_theme"
                android:layout_marginRight="15dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_assistantDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_assistantReplace"
                android:text="删除"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:padding="@dimen/jrmf_dimen_5"
                android:background="@drawable/round_theme"
                android:layout_marginRight="15dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_assistantAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="添加"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:padding="@dimen/jrmf_dimen_5"
                android:background="@drawable/round_theme"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/tv_assistant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/color_grey_666666"
        android:textSize="@dimen/sp_14"
        android:singleLine="true"
        android:ellipsize="end"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>
    <TextView
        android:id="@+id/tv_assistant_updateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_grey_666666"
        android:textSize="@dimen/sp_14"/>
    <TextView
        android:id="@+id/tv_assistant_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_grey_666666"
        android:textSize="@dimen/sp_14"/>
    <TextView
        android:id="@+id/tv_assistant_statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_grey_666666"
        android:textSize="@dimen/sp_14"/>

</LinearLayout>
