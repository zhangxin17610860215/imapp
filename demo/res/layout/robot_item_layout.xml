<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/white">

    <com.netease.wulewan.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/img_robotHade"

        android:layout_width="@dimen/jrmf_dimen_50"
        android:layout_height="@dimen/jrmf_dimen_50"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_robot_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white"
        android:background="@drawable/round_theme"
        android:padding="@dimen/jrmf_dimen_5"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/tv_robot_add"
        android:layout_toRightOf="@+id/img_robotHade"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_alignTop="@id/img_robotHade"
        android:layout_alignBottom="@id/img_robotHade">
        <TextView
            android:id="@+id/tv_robot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_robot_describe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_grey_666666"
            android:gravity="bottom"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>

</RelativeLayout>
