<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/div_color_grey">

    <include layout="@layout/v_toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择要查询的时间"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="@dimen/jrmf_dimen_50"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/jrmf_dimen_30"
        android:paddingRight="@dimen/jrmf_dimen_30"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_40">
        <TextView
            android:id="@+id/tv_detailedquery_startDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@mipmap/huise_bg"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="至"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_detailedquery_endDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@mipmap/huise_bg"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_detailedquery_Determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="@dimen/jrmf_dimen_50"
        android:background="@mipmap/green_bt_bg"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"/>

</LinearLayout>
