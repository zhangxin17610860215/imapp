<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_bg"
    android:orientation="vertical">
    <include layout="@layout/v_toolbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="请输入原零钱支付密码"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40" >
        <com.wulewan.ghxm.utils.view.PayPsdInputView
            android:id="@+id/et_checkpaypswd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/jrmf_dimen_50"
            android:inputType="number"
            app:maxCount1="6"
            android:background="@color/white"
            app:rectAngle1="@dimen/jrmf_dimen_5"
            app:psdType1="weChat1" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_checkpaypswd_Determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="确定"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/white"
        android:background="@drawable/login_upress"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"/>
</LinearLayout>
