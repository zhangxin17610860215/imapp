<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_bg"
    android:orientation="vertical">

    <include layout="@layout/v_toolbar"/>
    <RelativeLayout
        android:id="@+id/rl_redpacketassistant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群主收取红包个数与金额记录"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_one"
            android:text="统计3天内群主所收取的延时红包个数和金额总数"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_grey_666666"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_white_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/edit_bg"/>
    <RelativeLayout
        android:id="@+id/rl_SettingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="延时领取红包"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_white_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_two"
            android:layout_toLeftOf="@+id/img_right"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dimen_20"
            android:text="开启后，超过设置时间未被领取的红包，默认由群主代领"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_grey_666666"/>
        <TextView
            android:id="@+id/tv_isOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="关闭"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/img_right"
            android:layout_marginRight="@dimen/dimen_20"/>
    </RelativeLayout>

</LinearLayout>
