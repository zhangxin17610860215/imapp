<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_redpackdetailsItem_head"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/user_head_icon"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_redpackdetailsItem_head">
        <TextView
            android:id="@+id/tv_redpackdetailsItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_redpackdetailsItem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:layout_marginTop="@dimen/jrmf_dimen_5"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_redpackdetailsItem_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/img_redpackdetailsItem_head"/>
    <TextView
        android:id="@+id/tv_redpackdetailsItem_isOptimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_redpackdetailsItem_amount"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/jrmf_dimen_5"
        android:layout_marginRight="15dp"
        android:text="手气最佳"
        android:textColor="#EDE59D"
        android:textSize="@dimen/text_size_12"
        android:drawableLeft="@mipmap/isoptimum"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_rp"
        android:layout_below="@+id/img_redpackdetailsItem_head"/>

</RelativeLayout>
