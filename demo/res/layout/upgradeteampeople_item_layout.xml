<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shape_bg"
    android:layout_marginBottom="@dimen/jrmf_dimen_5"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/img_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/price_icon"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_price"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/tv_teamMemberLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dimen_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人群"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14"
            android:layout_toRightOf="@+id/tv_teamMemberLimit"
            android:layout_alignBottom="@+id/tv_teamMemberLimit"/>
        <TextView
            android:id="@+id/tv_prive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_teamMemberLimit"
            android:text=""/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_teamMemberLimit"
            android:layout_alignBottom="@+id/tv_prive"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_Upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_theme"
                android:text="升级"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
